<!DOCTYPE html>
<html>
    <head>
        <%- include("partials/head.ejs") %>
        <title>High Street Gym - Register</title>
    </head>
    <body>
        <main>
            <%- include("partials/header.ejs") %>

            <section>
                <form action="<%= ROUTES.REGISTER.getPath() %>" method="post" class="card">
                    <h2>Register</h2>

                    <div>
                        <label for="username">Username</label>
                        <div class="icon left">
                            <img src="/img/edit.svg" alt="Username Icon" />
                            <input
                                type="text"
                                name="username"
                                id="username"
                                placeholder="JohnDoe"
                                required
                                minlength="3"
                                maxlength="20"
                                pattern="^[A-Za-z0-9_\.]{3,19}$"
                                title="3-20 characters. Letters, numbers, periods, and underscores only."
                                autocomplete="username"
                            />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label for="first-name">First Name</label>
                            <div class="icon left">
                                <img
                                    src="/img/person.svg"
                                    alt="First Name Icon"
                                />
                                <input
                                    type="text"
                                    name="firstName"
                                    id="first-name"
                                    placeholder="John"
                                    required
                                    minlength="2"
                                    maxlength="50"
                                    pattern="^[A-Z][a-zA-Z'\-]{1,49}$"
                                    title="Start with a capital letter; letters, apostrophes, or hyphens."
                                    autocomplete="given-name"
                                />
                            </div>
                        </div>

                        <div>
                            <label for="last-name">Last Name</label>
                            <div class="icon left">
                                <img
                                    src="/img/person.svg"
                                    alt="Last Name Icon"
                                />
                                <input
                                    type="text"
                                    name="lastName"
                                    id="last-name"
                                    placeholder="Doe"
                                    required
                                    minlength="2"
                                    maxlength="50"
                                    pattern="^[A-Z][a-zA-Z'\-]{1,49}$"
                                    title="Start with a capital letter; letters, apostrophes, or hyphens."
                                    autocomplete="family-name"
                                />
                            </div>
                        </div>
                    </div>

                    <div>
                        <label for="birthday">Birthday</label>
                        <div class="icon left">
                            <img src="/img/date.svg" alt="Birthday Icon" />
                            <input type="date" name="birthday" id="birthday" max="<%= new Date().toISOString().slice(0,10) %>" autocomplete="bday" required/>
                        </div>
                    </div>

                    <div>
                        <label for="email">E-mail</label>
                        <div class="icon left">
                            <img src="/img/mail.svg" alt="E-mail Icon" />
                            <input
                                type="email"
                                name="email"
                                id="email"
                                placeholder="email@example.com"
                                required
                                autocomplete="email"
                            />
                        </div>
                    </div>

                    <div>
                        <label for="password">Password</label>
                        <div class="icon left">
                            <img src="/img/password.svg" alt="Password Icon" />
                            <input
                                type="password"
                                name="password"
                                id="password"
                                placeholder="••••••••••••••••"
                                required
                                minlength="8"
                                pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[a-z])(?=.*[^\w\d\s:])([^\s]){8,}$"
                                title="At least 8 characters, including at least one letter, one number, and one special character"
                                autocomplete="new-password"
                            />
                        </div>
                    </div>

                    <div>
                        <a href="<%= ROUTES.LOGIN.getPath() %>" class="button secondary full">Login</a>

                        <div class="icon right full">
                            <img src="/img/arrow-right.svg" alt="Register Icon">
                            <input type="submit" value="Register" class="button full" />
                        </div>
                    </div>
                </form>
            </section>

            <%- include("partials/footer.ejs") %>
        </main>
    </body>
</html>
