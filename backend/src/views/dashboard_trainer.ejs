<!DOCTYPE html>
<html>
  <head>
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <title>Trainer Dashboard</title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %>
      <section class="dashboard">
        <h2>Trainer Dashboard</h2>

        <div class="stat-grid single">
          <div class="stat card">
            <h3>Sessions This Week</h3>
            <span><%= sessionsThisWeek %> Sessions</span>
            <div class="icon left">
              <img src="/img/date.svg" alt="calendar" />
              <a class="button" href="/bookings">Manage My Gym Sessions</a>
            </div>
          </div>
        </div>

        <%- include("partials/account_form.ejs", { user }) %>
      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>
</html>
